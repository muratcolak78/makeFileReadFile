<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="470.0" prefWidth="461.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="tfFoderName" promptText="foldername" />
   <TextField fx:id="tfFileName" promptText="filename" />

    <Label fx:id="welcomeText" />
   <TextArea fx:id="tAWritesomething" prefHeight="101.0" prefWidth="324.0" promptText="write something" />
   <TextArea fx:id="tAReadFile" prefHeight="101.0" prefWidth="324.0" />
    <Button onAction="#onHelloButtonClick" text="make file" />
   <Button fx:id="buttonReadFile" mnemonicParsing="false" onAction="#onReadButtonClick" text="read file" />
</VBox>
